<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.tinybag.www.myapplication.MainActivity">

    <Button
        android:layout_gravity="center"
        android:id="@+id/rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rx Java"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/rxandroid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rx Android 1"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/rxandroid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rx Android 2"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/rxasynctask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Async Task"/>

    <TextView
        android:layout_gravity="center"
        android:id="@android:id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
